<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguyentheson.module21_ex4.MainActivity">


    <TextView
        android:id="@+id/label_title"
        android:layout_width="0dp"
        android:paddingTop="8dp"
        android:background="@color/darkGreen"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Thông tin cá nhân"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:paddingTop="8dp"
        android:text="Họ Tên"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_title" />

    <TextView
        android:id="@+id/label_cmnd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/label_name"
        android:text="CMND"
        android:textSize="18dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.009" />

    <EditText
        android:id="@+id/text_name"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/label_title"
        app:layout_constraintLeft_toRightOf="@+id/label_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.344" />

    <EditText
        android:id="@+id/text_cmnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/label_cmnd"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.317" />

    <TextView
        android:id="@+id/label_certification"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="Bằng Cấp"
        android:textSize="18dp"
        android:paddingTop="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cmnd"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:id="@+id/rd_midle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Trung Cấp"
        app:layout_constraintTop_toBottomOf="@+id/label_certification"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.029" />

    <RadioButton
        android:id="@+id/rd_caoDang"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:text="Cao Đẳng"
        app:layout_constraintLeft_toRightOf="@+id/rd_midle"
        app:layout_constraintTop_toBottomOf="@+id/label_certification"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="21dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.027" />
    <RadioButton
        android:id="@+id/rd_daiHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đại Học"
        app:layout_constraintLeft_toRightOf="@+id/rd_caoDang"
        app:layout_constraintTop_toBottomOf="@+id/label_certification"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="28dp"
        app:layout_constraintHorizontal_bias="0.347" />
    <TextView
        android:id="@+id/label_favor"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="Sở Thích"
        android:textSize="18dp"
        android:paddingTop="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rd_caoDang"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:id="@+id/rd_readNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đọc báo"
        app:layout_constraintTop_toBottomOf="@+id/label_favor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.031" />

    <RadioButton
        android:id="@+id/rd_readBook"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:text="Đọc sách"
        app:layout_constraintLeft_toRightOf="@+id/rd_midle"
        app:layout_constraintTop_toBottomOf="@+id/label_favor"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="21dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.027" />
    <RadioButton
        android:id="@+id/rd_readCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc Coding"
        app:layout_constraintLeft_toRightOf="@+id/rd_caoDang"
        app:layout_constraintTop_toBottomOf="@+id/label_favor"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="28dp"
        app:layout_constraintHorizontal_bias="0.347" />
    <TextView
        android:id="@+id/label_addtionalInfo"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:text="Thông tin bổ sung"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rd_readBook"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" />
    <EditText
        android:id="@+id/text_additionalInfo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_addtionalInfo"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/btn_send"
        android:text="Gui thong tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_additionalInfo"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
